{% extends 'base.html.twig' %}

{% block title %}Client list{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <h3 class="mx-auto my-3">Ð¡lients with the largest number of reports
            </h3>
        </div>
        <div class="mt-3 mx-3">
            <table class="table table-lg table-striped table-bordered">
                <thead>
                <tr>
                    <th>Reports quantity</th>
                    <th>Client name</th>
                </tr>
                </thead>
                <tbody>
                {% for client in clients %}
                    <tr>
                        <td class="align-middle">{{ client.count }}</td>
                        <td class="align-middle">{{ client.name }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="row my-3">
            <a class="btn btn-primary mx-auto" href="/">Go Back</a>
        </div>
    </div>
{% endblock %}